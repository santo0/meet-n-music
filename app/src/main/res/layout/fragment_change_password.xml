<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/currentPasswordT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Current password:"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/currentPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/currentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="17dp"
        android:hint="Your current password"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/newPassword"
        app:layout_constraintStart_toEndOf="@+id/currentPasswordT" />

    <TextView
        android:id="@+id/newPasswordT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-black"
        android:text="New password:"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/newPassword"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="At least 6 characters"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmPassword"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword" />

    <TextView
        android:id="@+id/confirmPasswordT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:fontFamily="sans-serif-black"
        android:text="Confirm password:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="At least 6 characters"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/confirmPasswordT"
        app:layout_constraintStart_toEndOf="@+id/confirmPasswordT" />

    <Button
        android:id="@+id/submitPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="47dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="sans-serif-black"
        android:text="Submit"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/confirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>