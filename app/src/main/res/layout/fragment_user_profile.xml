<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/user_icon"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/change_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_photo" />

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="534dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Username: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_photo" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Email: joelfarrecortes@gmail.com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/username" />

    <TextView
        android:id="@+id/change_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/change_email"
        app:layout_constraintStart_toStartOf="@+id/change_password"
        app:layout_constraintTop_toTopOf="@+id/profile_email" />

    <TextView
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="65dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/change_password"
        app:layout_constraintStart_toStartOf="@+id/spanish"
        app:layout_constraintTop_toTopOf="@+id/change_email" />

    <TextView
        android:id="@+id/languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/languages"
        app:layout_constraintStart_toEndOf="@+id/spanish"
        app:layout_constraintTop_toTopOf="@+id/change_password" />

    <ImageView
        android:id="@+id/spanish"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="9dp"
        android:src="@drawable/spanish"
        app:layout_constraintEnd_toStartOf="@+id/english"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/languages" />

    <ImageView
        android:id="@+id/english"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/english"
        app:layout_constraintEnd_toStartOf="@+id/danish"
        app:layout_constraintStart_toEndOf="@+id/spanish"
        app:layout_constraintTop_toTopOf="@+id/languages" />

    <ImageView
        android:id="@+id/danish"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="121dp"
        android:src="@drawable/danish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/english"
        app:layout_constraintTop_toTopOf="@+id/languages" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="93dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="sans-serif-black"
        android:text="@string/log_out"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/spanish"
        app:layout_constraintTop_toTopOf="@+id/english" />

</androidx.constraintlayout.widget.ConstraintLayout>